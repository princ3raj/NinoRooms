<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ss.com.bannerslider.Slider
                    app:slider_animateIndicators="true"
                    android:id="@+id/banner_slider1"
                    android:layout_width="match_parent"
                    app:slider_interval="3000"
                    app:slider_loopSlides="true"
                    app:slider_selectedSlideIndicator="@drawable/unselected_slide_indicator"
                    android:layout_height="400dp" />


                <ImageButton
                    android:id="@+id/arrow_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="25dp"
                    android:background="@drawable/ic_black_back_arrow" />


                <ImageButton
                    android:id="@+id/bookmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="25dp"
                    android:background="@drawable/ic_bookmark_unactive" />


                <TextView
                    android:id="@+id/pg_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="410dp"
                    android:text="Ace Divino"
                    android:textAppearance="@style/pg_name" />

                <TextView
                    android:id="@+id/ac_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="410dp"
                    android:layout_marginEnd="25dp"
                    android:text="Rs.7,640"
                    android:textAppearance="@style/price_tag" />


                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="460dp"
                    android:text="Sector 121, Noida"
                    android:textAppearance="@style/address" />

                <TextView
                    android:id="@+id/non_ac_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="460dp"
                    android:layout_marginEnd="25dp"
                    android:text="1 month"
                    android:textAppearance="@style/month" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="500dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/vertical_line" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="520dp"
                    android:text="Details"
                    android:textAppearance="@style/details" />

                <TextView
                    android:id="@+id/details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="560dp"
                    android:layout_marginEnd="25dp"
                    android:text="@string/details_text"
                    android:textAppearance="@style/details_text" />


                <TextView
                    android:id="@+id/contact_owner"
                    android:layout_width="650dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="700dp"
                    android:layout_marginEnd="25dp"
                    android:background="@drawable/select_room"
                    android:clickable="true"
                    android:padding="15dp"
                    android:focusable="true"
                    android:textAlignment="center"
                    android:textColor="#FFF"
                    android:textSize="21sp"
                    android:text="Contact Owner"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="785dp"
                    android:text="Location"
                    android:textAppearance="@style/details" />


                <ImageButton
                    android:id="@+id/location_call"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="match_parent"
                    android:layout_height="167dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="840dp"
                    android:layout_marginEnd="25dp"
                    android:background="@drawable/google_map" />

                <ImageButton

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="188dp"
                    android:layout_marginTop="910dp"
                    android:background="@drawable/gps" />

                <ImageButton

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="197dp"
                    android:layout_marginTop="920dp"
                    android:background="@drawable/gps_point" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="1030dp"
                    android:text="Facilities"
                    android:textAppearance="@style/details" />



                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1080dp"
                    android:orientation="horizontal"
                    android:padding="25dp"
                    android:layout_width="match_parent"
                    android:weightSum="100">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="20"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_wifi_facility" />

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:text="Internet"
                            android:textAlignment="center"
                            android:textAppearance="@style/facility_text" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="20"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_ac_facility" />

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:text="Ac"
                            android:textAlignment="center"
                            android:textAppearance="@style/facility_text" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="20"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_powerbackup_facility" />

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:text="Power"
                            android:textAlignment="center"
                            android:textAppearance="@style/facility_text" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="20"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_washing_machine_facility" />

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:text="Machine"
                            android:textAlignment="center"
                            android:textAppearance="@style/facility_text" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="20"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_cctv_facility" />

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:text="CCTV"
                            android:textAlignment="center"
                            android:textAppearance="@style/facility_text" />


                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>


        </androidx.cardview.widget.CardView>


    </androidx.core.widget.NestedScrollView>

</LinearLayout>